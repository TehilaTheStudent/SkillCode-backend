{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Backend in Docker",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "/app",
            "port": 2345,
            "host": "localhost",
            "program": "${workspaceFolder}/SkillCode-backend",
            "env": {},
            "args": [],
            "showLog": true
        },
        {
            "name": "Launch development",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/main.go",
            "args": ["ENV_MOD=development"],
        },
        {
            "name": "Launch production",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/main.go",
            "args": ["ENV_MOD=production"],
        },
        {
            "name": "Debug Go Test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/internal/repository/question_repository_test.go",
            "env": {},
            "buildFlags": "",
            "trace": "log"
        },
        {
            "name": "Debug Current File",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${file}",
            "cwd": "${workspaceFolder}"
        }
    ]
}
